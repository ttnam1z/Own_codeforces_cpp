#include<iostream>
#include<vector>

using namespace std;

int main(){
    int t;
    cin >> t;

    while(t--){
        long long n,a,b = 0;
        cin >> n;
        cin >> a;
        cin >> b;

        if(a == 1){
            if(((n-a)%b)==0){
                cout << "Yes" << endl;
            } else {
                cout << "No" << endl;
            }
            continue;
        }

        while(n%a == 0){
            n = n/a;
        }
        int cnt;
        long long n1 = n;

        while(n1 > a){
            n1 = (n1-n1%a)/a;
            cnt++;
        }
        int match = 0;
        long long pow=1;
        for(int i=0; i<=cnt; i++){
            if(((n-pow) % b) ==0){match=1;break;}
            pow *=a;
        }
        if(match == 0){
            cout << "No" << endl;
        } else {
            cout << "Yes" << endl;
        }

    }

    return 0;
}
