#include <iostream>
#include <vector>
 
using namespace std;
vector<int> v;
 
int main(){
    int n;
    int len;
    cin >> n;
    while(n--){
        cin >> len;
        v.resize(len);
        for(int val,i =0; i < len; i++){
            cin >> val;
            v[i] = val;
        }
        long long count = 0;
        for(int i = 0; i < len-1;i++){
            for (int j=v[i] - (i+1) % v[i] - 1; j<len;j += v[i] ){
                if ((i < j) && (1ll*v[i]*v[j]) == (i+j +2)){
                    count++;
                }
            }
        }
        cout << count << endl;
    }
 
    return 0;
}
